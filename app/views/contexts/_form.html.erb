<%= form_with(model: context) do |form| %>
  <% if context.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(context.errors.count, "error") %> prohibited this context from being saved:</h2>

      <ul>
        <% context.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :system_prompt, style: "display: block" %>
    <%= form.file_field :system_prompt %>
  </div>

  <div>
    <%= form.label :markdown, style: "display: block" %>
    <%= form.file_field :markdown, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
